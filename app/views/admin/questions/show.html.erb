<p>
  <h1><%= t('.header') %></h1>
  <h2><%= @question.test.title %></h2>
  <strong><%= Question.human_attribute_name(:body) %></strong>
  <%= @question.body %>
</p>

<p>
  <h2><%= t('.answers')%></h2>
</p>

<p>
  <%= link_to t('.new_answer'), new_admin_question_answer_path(@question) %>
</p>

<table >
  <tr>
    <th><%= t('.table.body') %></th>
    <th><%= t('.table.correct') %></th>
    <th colspan="3"><%= t('.table.actions') %></th>
  </tr>

  <%= render @question.answers %>

</table>

<%= link_to t('.edit'), edit_admin_question_path(@question) %> |
<%= link_to t('.back'), admin_test_path(@question.test) %>
